{
  "name": "${environmentName}",
  "description": "Galera cluster",
  "version": "1.0.0",
  "author": "https://github.com/absidish",
  "containers": [
    {
      "hostname": "db",
      "template": "debian-stretch",
      "peer-criteria": "gr1",
      "size": "${dbtype}",
      "peer-layout": "d1"
    }
  ],
  "peer-layouts": [
    {
      "name": "d1",
      "peer-count": "${peerCount}",
      "container-per-peer": "1"
    }
  ],
  "peer-criteria": [
    {
      "name": "gr1"
    }
  ],
  "ansible-configuration": {
    "source-url": "https://github.com/platium1/galera-cluster/archive/master.zip",
    "ansible-playbook": "main.yml",
    "extra-vars": [
    ],
    "groups": [
      {
        "name": "monitoring_servers",
        "python-interpreter": "/usr/bin/python3",
        "hostnames": [
          "db"
        ]
      }
    ]
  },
  "user-variables": {
    "environmentName": {
      "description": "Enter the environment name",
      "type": "string",
      "default": "wp",
      "validation": "[a-zA-Z0-9]+"
    },
    "peerCount": {
      "description": "peer count",
      "type": "int",
      "default": "3",
      "validation": "\\d+"
    },
    "dbtype": {
      "description": "You can set TINY,SMALL,MEDIUM,LARGE,HUGE",
      "type": "enum",
      "default": "SMALL",
      "validation": "TINY,SMALL,MEDIUM,LARGE,HUGE"
    },
    "webtype": {
      "description": "You can set TINY,SMALL,MEDIUM,LARGE,HUGE",
      "type": "enum",
      "default": "SMALL",
      "validation": "TINY,SMALL,MEDIUM,LARGE,HUGE"
    }
  }
}
